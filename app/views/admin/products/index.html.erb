<h2>Available Products</h2>
<div class="tab">
  <button class="tablinks active" onclick="openTab(event, 'available')">Available</button>
  <button class="tablinks" onclick="openTab(event, 'unavailable')">Unavailable</button>
</div><br>

<div class="align-items-center">
  <%= link_to new_admin_product_path do %>
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" height="30px" width="30px" class="w-6 h-6 ms-4">
      <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v6m3-3H9m12 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
    </svg>
  <% end %>
</div>

<div id="available" class="tabcontent" style="display:block;">
  <table class="admin-table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Price</th>
        <th colspan="4">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @available_products.each do |product| %>
        <tr>
          <td><%= product.name %></td>
          <td><%= number_to_currency(product.price) %></td>
          <td class="action-buttons d-flex align-items-center">
            <%= button_to 'Show', admin_product_path(product), method: :get %>
            <%= button_to 'Edit', edit_admin_product_path(product), method: :get %>
            <%= button_to 'Make Unavailable', make_unavailable_admin_product_path(product), method: :patch %>
            <%= button_to 'Delete', admin_product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div id="unavailable" class="tabcontent">
  <table class="admin-table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Price</th>
        <th colspan="4">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @unavailable_products.each do |product| %>
        <tr>
          <td><%= product.name %></td>
          <td><%= number_to_currency(product.price) %></td>
          <td class="action-buttons">
            <%= button_to 'Show', admin_product_path(product), method: :get%>
            <%= button_to 'Edit', edit_admin_product_path(product), method: :get %>
            <%= button_to 'Make Available', make_available_admin_product_path(product), method: :patch %>
            <%= button_to 'Delete', admin_product_path(product), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<script>
  function openTab(evt, tabName) {
    var i, tabcontent, tablinks;
    tabcontent = document.getElementsByClassName("tabcontent");
    for (i = 0; i < tabcontent.length; i++) {
      tabcontent[i].style.display = "none";
    }
    tablinks = document.getElementsByClassName("tablinks");
    for (i = 0; i < tablinks.length; i++) {
      tablinks[i].className = tablinks[i].className.replace(" active", "");
    }
    document.getElementById(tabName).style.display = "block";
    evt.currentTarget.className += " active";
  }
</script>