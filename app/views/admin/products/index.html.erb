<h2>Products</h2><br>

<div class="tab">
  <button class="tablinks active" onclick="openTab(event, 'available')">Available</button>
  <button class="tablinks" onclick="openTab(event, 'unavailable')">Unavailable</button>
</div><br>

<div class="align-items-center">
  <%= link_to new_admin_product_path do %>
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" height="30px" width="30px" class="w-6 h-6 ms-4">
      <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v6m3-3H9m12 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
    </svg>
  <% end %>
</div>

<div id="available" class="tabcontent" style="display:block;">
  <%= render partial: 'product_table', locals: { products: @available_products, available: true } %>
</div>

<div id="unavailable" class="tabcontent">
  <%= render partial: 'product_table', locals: { products: @unavailable_products, available: false } %>
</div>

<script>
  function openTab(evt, tabName) {
    var i, tabcontent, tablinks;
    tabcontent = document.getElementsByClassName("tabcontent");
    for (i = 0; i < tabcontent.length; i++) {
      tabcontent[i].style.display = "none";
    }
    tablinks = document.getElementsByClassName("tablinks");
    for (i = 0; i < tablinks.length; i++) {
      tablinks[i].className = tablinks[i].className.replace(" active", "");
    }
    document.getElementById(tabName).style.display = "block";
    evt.currentTarget.className += " active";
  }
</script>
